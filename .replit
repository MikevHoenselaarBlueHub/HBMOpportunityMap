modules = ["nodejs-20", "web"]
run = "python -m http.server 5000"

[nix]
channel = "stable-24_05"

[deployment]
run = ["sh", "-c", "npx serve . -s -l 5000"]

[workflows]
runButton = "Start Webserver"

[[workflows.workflow]]
name = "Start Webserver"
author = 44801690
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx serve . -l 5000"

[[ports]]
localPort = 5000
externalPort = 80
